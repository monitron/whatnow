      ga('create', 'UA-87345087-1', 'auto');
      ga('send', 'pageview');
    </script>
    <% end %>
    
    <div id="header">
      <h1><%= link_to "What now?", random_ideas_path %></h1>
      <div id="navigation" class="wordy">
        <%= link_to "New & Popular", top_ideas_path %>
        <%= link_to "Submit an Idea", new_idea_path %>
        <%= link_to "About This Site", about_path %>
      </div>
    </div>
    <div id="content">
      <%= yield %>
    </div>
    <div id="footer">
      <div id="navigation" class="curt">
        <%= link_to "New & Popular", top_ideas_path %>
        <%= link_to "Submit Idea", new_idea_path %>
        <%= link_to "About", about_path %>
      </div>
      <div id="subscribe">
        <div class="curt">
          <strong>Stay involved:</strong>
          <a href="http://tinyletter.com/whatnowio">Newsletter</a> &bull;
          <a href="https://twitter.com/whatnowio">Twitter</a>
        </div>
        <div class="wordy">
          <strong>Stay involved.</strong>
          We have big plans. <a href="http://tinyletter.com/whatnowio">Sign up for our newsletter</a> or <a href="https://twitter.com/whatnowio">follow us on Twitter</a>.
        </div>
      </div>
      <div id="legal">
        <div class="wordy">
          &copy; 2016 &bull;
